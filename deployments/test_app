upstream test_app_server {

    server localhost:8000 fail_timeout=0;

}



server {

    listen 80;

    server_name j3b106.p.ssafy.io;



    client_max_body_size 4G;



    access_log /home/ubuntu/graphql/logs/nginx-access.log;

    error_log /home/ubuntu/graphql/logs/nginx-error.log;



    location /static/ {

        alias /home/ubuntu/graphql/frontend/dist/static/;

    }



    location /media/ {

        alias /home/ubuntu/graphql/media/;

    }
    location /graphql/ {

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header Host $http_host;

        proxy_redirect off;

        try_files $uri $uri/ /index.html;


        if (!-f $request_filename) {

            proxy_pass http://test_app_server;

            break;

        }

    }



    location / {
        root /home/ubuntu/graphql/frontend/dist/;

        try_files $uri $uri/ /index.html;
    }

}
